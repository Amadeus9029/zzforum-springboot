<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.graduate.zzforum.dao.ZZUserDao">
    <select id="getZZUserList" resultType="ZZUser">
        select * from `zz_user`
    </select>
    <select id="findZZUser" resultType="ZZUser" parameterType="ZZUser">
        select * from `zz_user`
        <where>
            <if test="id != null and id != ''">and `id` = #{id}</if>
            <if test="name != null and name != ''">and `name` = #{name}</if>
        </where>
    </select>
    <insert id="addZZUser" parameterType="ZZUser">
        insert into `zz_user`
        values(#{id},#{name},#{password},#{create_time})
    </insert>
    <delete id="removeZZUserById">
        delete from `zz_user` where `id` = #{id}
    </delete>
</mapper>